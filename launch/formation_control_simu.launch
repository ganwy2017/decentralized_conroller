<?xml version="1.0"?>
<launch>
	<param name="/use_sim_time" value="true" />
	<arg name="world_file"  default="$(find formation_control_simu)/worlds/simple.world"/>	
	<!--<arg name="world_file"  default="$(env TURTLEBOT_GAZEBO_WORLD_FILE)"/>-->

	<!-- start world -->
	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="use_sim_time" value="true"/>
		<arg name="debug" value="false"/>
		<arg name="gui" value="true"/>       <!-- graphic interface -->
		<arg name="world_name" value="$(arg world_file)"/>
		<!--<arg name="world_name" value="worlds/willowgarage.world"/>-->
	</include>

	<!-- include our robots -->
	<include file="$(find formation_control_simu)/launch/robots.launch"/>

	<!-- start rviz -->
	<!--<node name="rviz" pkg="rviz" type="rviz" args="-d $(find formation_control_simu)/multi_robot.rviz"/>-->
	<node name="rviz" pkg="rviz" type="rviz"/>
</launch>
